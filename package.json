  "bugs": {
    "url": "https://github.com/SaranshDawra/Live-Polling/issues"
  },
  "homepage": "https://github.com/SaranshDawra/Live-Polling#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.7.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.15",
    "mongoose-unique-validator": "^2.0.3"
  }
}
